---
import BaseLayout from '../layouts/BaseLayout.astro';
import Terminal from '../components/Terminal.astro';

const experience = [
  {
    role: "Senior Software Developer",
    company: "Tech Company",
    period: "2022 - Present",
    description: "Building scalable web applications and leading technical initiatives."
  },
  {
    role: "Software Developer",
    company: "Startup Inc",
    period: "2020 - 2022",
    description: "Full-stack development with React, Node.js, and PostgreSQL."
  },
  {
    role: "Junior Developer",
    company: "Agency Co",
    period: "2018 - 2020",
    description: "Started my journey building websites and web applications."
  }
];

const skills = {
  languages: ["Java", "JavaScript"],
  frontend: ["Vue", "React"],
  backend: ["Java"]
};
---

<BaseLayout title="About" description="Learn more about me, my background, skills, and what drives me as a software developer.">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 py-12 sm:py-20">
    <!-- Header -->
    <header class="mb-16 opacity-0 animate-fadeIn">
      <div class="font-mono text-sm text-[var(--color-accent-cyan)] mb-2">
        <span class="text-[var(--color-text-muted)]">$</span> cat ./about-me.md
      </div>
      <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-[var(--color-text-primary)] mb-6">
        About Me
      </h1>
    </header>
    
    <!-- Introduction -->
    <section class="mb-16 opacity-0 animate-fadeIn stagger-1">
      <div class="grid md:grid-cols-3 gap-8 items-start">
        <!-- Photo placeholder -->
        <div class="md:col-span-1">
          <div class="aspect-square rounded-xl overflow-hidden border border-[var(--color-border)] bg-[var(--color-bg-secondary)] flex items-center justify-center">
            <div class="text-center font-mono text-[var(--color-text-muted)]">
              <div class="text-6xl mb-2">üë®‚Äçüíª</div>
              <p class="text-sm">Aldy Rambe</p>
            </div>
          </div>
        </div>
        
        <!-- Bio -->
        <div class="md:col-span-2 space-y-4 text-[var(--color-text-secondary)] leading-relaxed">
          <p class="text-lg">
            Hi! I'm <span class="text-[var(--color-accent-cyan)] font-medium">Aldy Rambe</span>, 
            a software developer passionate about building elegant solutions to complex problems.
          </p>
          <p>
            I specialize in full-stack web development, with a focus on creating performant, 
            accessible, and beautiful user experiences. I believe that great software is not 
            just about functionality, but also about the joy it brings to users.
          </p>
          <p>
            When I'm not coding, you can find me exploring new technologies, contributing to 
            open source projects, or writing about my learnings on this blog. I'm a lifelong 
            learner who believes in the power of sharing knowledge.
          </p>
          <p>
            I'm currently open to new opportunities and collaborations. If you have an 
            interesting project or just want to chat about technology, feel free to reach out!
          </p>
        </div>
      </div>
    </section>
    
    <!-- Skills -->
    <section class="mb-16 opacity-0 animate-fadeIn stagger-2">
      <Terminal title="skills.json">
        <pre class="text-sm"><code>{`{`}
  <span class="text-[var(--color-accent-purple)]">"languages"</span>: [<span class="text-[var(--color-accent-emerald)]">{skills.languages.map(s => `"${s}"`).join(', ')}</span>],
  <span class="text-[var(--color-accent-purple)]">"frontend"</span>: [<span class="text-[var(--color-accent-emerald)]">{skills.frontend.map(s => `"${s}"`).join(', ')}</span>],
  <span class="text-[var(--color-accent-purple)]">"backend"</span>: [<span class="text-[var(--color-accent-emerald)]">{skills.backend.map(s => `"${s}"`).join(', ')}</span>]
{`}`}</code></pre>
      </Terminal>
    </section>
    
    <!-- Experience -->
    <section class="mb-16 opacity-0 animate-fadeIn stagger-3">
      <div class="font-mono text-sm text-[var(--color-accent-cyan)] mb-6">
        <span class="text-[var(--color-text-muted)]">$</span> cat ./experience.log
      </div>
      <h2 class="text-2xl font-bold text-[var(--color-text-primary)] mb-8">Experience</h2>
      
      <div class="space-y-8">
        {experience.map((job, index) => (
          <div class="relative pl-8 border-l-2 border-[var(--color-border)] hover:border-[var(--color-accent-cyan)] transition-colors">
            <!-- Timeline dot -->
            <div class="absolute left-[-9px] top-0 w-4 h-4 rounded-full bg-[var(--color-bg-primary)] border-2 border-[var(--color-accent-cyan)]"></div>
            
            <div class="pb-8">
              <div class="flex flex-wrap items-center gap-2 mb-2">
                <h3 class="text-lg font-bold text-[var(--color-text-primary)]">
                  {job.role}
                </h3>
                <span class="text-[var(--color-text-muted)]">@</span>
                <span class="text-[var(--color-accent-cyan)]">{job.company}</span>
              </div>
              <p class="font-mono text-sm text-[var(--color-text-muted)] mb-2">
                {job.period}
              </p>
              <p class="text-[var(--color-text-secondary)]">
                {job.description}
              </p>
            </div>
          </div>
        ))}
      </div>
    </section>
    
    <!-- Values -->
    <section class="mb-16 opacity-0 animate-fadeIn stagger-4">
      <div class="font-mono text-sm text-[var(--color-accent-cyan)] mb-6">
        <span class="text-[var(--color-text-muted)]">$</span> echo $VALUES
      </div>
      <h2 class="text-2xl font-bold text-[var(--color-text-primary)] mb-8">What I Value</h2>
      
      <div class="grid sm:grid-cols-2 gap-6">
        <div class="p-6 rounded-xl border border-[var(--color-border)] bg-[var(--color-bg-card)]">
          <h3 class="text-lg font-bold text-[var(--color-text-primary)] mb-2 flex items-center gap-2">
            <span class="text-[var(--color-accent-cyan)]">‚Üí</span>
            Quality Over Speed
          </h3>
          <p class="text-[var(--color-text-secondary)] text-sm">
            I believe in writing clean, maintainable code that stands the test of time.
          </p>
        </div>
        
        <div class="p-6 rounded-xl border border-[var(--color-border)] bg-[var(--color-bg-card)]">
          <h3 class="text-lg font-bold text-[var(--color-text-primary)] mb-2 flex items-center gap-2">
            <span class="text-[var(--color-accent-emerald)]">‚Üí</span>
            Continuous Learning
          </h3>
          <p class="text-[var(--color-text-secondary)] text-sm">
            The tech landscape evolves rapidly. I stay curious and embrace new challenges.
          </p>
        </div>
        
        <div class="p-6 rounded-xl border border-[var(--color-border)] bg-[var(--color-bg-card)]">
          <h3 class="text-lg font-bold text-[var(--color-text-primary)] mb-2 flex items-center gap-2">
            <span class="text-[var(--color-accent-purple)]">‚Üí</span>
            User-Centric Design
          </h3>
          <p class="text-[var(--color-text-secondary)] text-sm">
            Great software puts users first. I design with empathy and accessibility in mind.
          </p>
        </div>
        
        <div class="p-6 rounded-xl border border-[var(--color-border)] bg-[var(--color-bg-card)]">
          <h3 class="text-lg font-bold text-[var(--color-text-primary)] mb-2 flex items-center gap-2">
            <span class="text-[var(--color-accent-amber)]">‚Üí</span>
            Open Source
          </h3>
          <p class="text-[var(--color-text-secondary)] text-sm">
            I believe in giving back to the community and sharing knowledge freely.
          </p>
        </div>
      </div>
    </section>
    
    <!-- Contact CTA -->
    <section class="text-center opacity-0 animate-fadeIn stagger-5">
      <h2 class="text-2xl font-bold text-[var(--color-text-primary)] mb-4">
        Let's Connect
      </h2>
      <p class="text-[var(--color-text-secondary)] mb-8 max-w-lg mx-auto">
        Whether you want to collaborate on a project, have a question, or just want to say hi ‚Äî 
        I'd love to hear from you!
      </p>
      <a 
        href="mailto:hello@aldyrambe.dev"
        class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-[var(--color-accent-cyan)] text-[var(--color-bg-primary)] font-mono font-medium hover:bg-[var(--color-accent-emerald)] transition-all duration-200"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        Send me an email
      </a>
    </section>
  </div>
</BaseLayout>

