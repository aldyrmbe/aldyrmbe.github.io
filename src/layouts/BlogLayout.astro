---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: string;
  tags?: string[];
  category?: string;
}

const { title, description, pubDate, updatedDate, heroImage, tags = [], category } = Astro.props;

const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

// Calculate reading time (rough estimate: 200 words per minute)
const content = await Astro.slots.render('default');
const wordCount = content.split(/\s+/).length;
const readingTime = Math.ceil(wordCount / 200);
---

<BaseLayout title={title} description={description} image={heroImage}>
  <article class="max-w-3xl mx-auto px-4 sm:px-6 py-12 sm:py-20">
    <!-- Article Header -->
    <header class="mb-12 opacity-0 animate-fadeIn">
      <!-- Category & Date -->
      <div class="flex flex-wrap items-center gap-3 mb-6 font-mono text-sm">
        {category && (
          <span class="px-3 py-1 rounded-full bg-[var(--color-accent-cyan)]/10 text-[var(--color-accent-cyan)]">
            {category}
          </span>
        )}
        <span class="text-[var(--color-text-muted)]">
          <span class="text-[var(--color-accent-emerald)]">$</span> published on {formatDate(pubDate)}
        </span>
        <span class="text-[var(--color-text-muted)]">â€¢</span>
        <span class="text-[var(--color-text-muted)]">{readingTime} min read</span>
      </div>
      
      <!-- Title -->
      <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-[var(--color-text-primary)] leading-tight mb-6">
        {title}
      </h1>
      
      <!-- Description -->
      <p class="text-lg text-[var(--color-text-secondary)] leading-relaxed">
        {description}
      </p>
      
      <!-- Tags -->
      {tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mt-6">
          {tags.map(tag => (
            <span class="px-3 py-1 rounded-lg bg-[var(--color-bg-tertiary)] text-[var(--color-text-muted)] text-sm font-mono">
              #{tag}
            </span>
          ))}
        </div>
      )}
      
      {updatedDate && (
        <p class="mt-4 text-sm text-[var(--color-text-muted)] italic font-mono">
          Last updated: {formatDate(updatedDate)}
        </p>
      )}
    </header>
    
    <!-- Hero Image -->
    {heroImage && (
      <div class="mb-12 rounded-lg overflow-hidden border border-[var(--color-border)] opacity-0 animate-fadeIn stagger-1">
        <img 
          src={heroImage} 
          alt={title}
          class="w-full h-auto"
        />
      </div>
    )}
    
    <!-- Article Content -->
    <div class="prose opacity-0 animate-fadeIn stagger-2">
      <slot />
    </div>
    
    <!-- Article Footer -->
    <footer class="mt-16 pt-8 border-t border-[var(--color-border)] opacity-0 animate-fadeIn stagger-3">
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
        <a 
          href="/blog"
          class="inline-flex items-center gap-2 text-[var(--color-accent-cyan)] hover:text-[var(--color-accent-emerald)] transition-colors font-mono"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          cd ../blog
        </a>
        
        <div class="flex items-center gap-4">
          <span class="text-[var(--color-text-muted)] text-sm">Share:</span>
          <a 
            href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${Astro.url}`}
            target="_blank"
            rel="noopener noreferrer"
            class="text-[var(--color-text-secondary)] hover:text-[var(--color-accent-cyan)] transition-colors"
            aria-label="Share on Twitter"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path>
            </svg>
          </a>
          <a 
            href={`https://www.linkedin.com/shareArticle?mini=true&url=${Astro.url}&title=${encodeURIComponent(title)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="text-[var(--color-text-secondary)] hover:text-[var(--color-accent-cyan)] transition-colors"
            aria-label="Share on LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
            </svg>
          </a>
        </div>
      </div>
    </footer>
  </article>
</BaseLayout>

