---
import ThemeToggle from './ThemeToggle.astro';

const pathname = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/projects', label: 'Projects' },
  { href: '/blog', label: 'Blog' },
  { href: '/about', label: 'About' },
];

const isActive = (href: string) => {
  if (href === '/') return pathname === '/';
  return pathname.startsWith(href);
};
---

<header class="fixed top-0 left-0 right-0 z-50 border-b border-[var(--color-border)] bg-[var(--color-bg-primary)]/80 backdrop-blur-md transition-colors duration-300">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-1">
        {navLinks.map(link => (
          <a 
            href={link.href}
            class:list={[
              'px-4 py-2 rounded-lg font-mono text-sm transition-all duration-200',
              isActive(link.href) 
                ? 'text-[var(--color-accent-cyan)] bg-[var(--color-accent-cyan)]/10' 
                : 'text-[var(--color-text-secondary)] hover:text-[var(--color-text-primary)] hover:bg-[var(--color-bg-tertiary)]'
            ]}
          >
            {isActive(link.href) && <span class="text-[var(--color-text-muted)] mr-1">~/</span>}
            {link.label.toLowerCase()}
          </a>
        ))}
      </div>
      
      <!-- Right side: Theme toggle + Mobile menu -->
      <div class="flex items-center gap-3">
        <ThemeToggle />
        
        <!-- Mobile menu button -->
        <button 
          id="mobile-menu-btn"
          class="md:hidden p-2 rounded-lg text-[var(--color-text-secondary)] hover:text-[var(--color-text-primary)] hover:bg-[var(--color-bg-tertiary)] transition-colors"
          aria-label="Toggle menu"
        >
          <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden hidden pb-4">
      <div class="flex flex-col gap-1 pt-2 border-t border-[var(--color-border)]">
        {navLinks.map(link => (
          <a 
            href={link.href}
            class:list={[
              'px-4 py-3 rounded-lg font-mono text-sm transition-all duration-200',
              isActive(link.href) 
                ? 'text-[var(--color-accent-cyan)] bg-[var(--color-accent-cyan)]/10' 
                : 'text-[var(--color-text-secondary)] hover:text-[var(--color-text-primary)] hover:bg-[var(--color-bg-tertiary)]'
            ]}
          >
            <span class="text-[var(--color-text-muted)] mr-2">$</span>
            cd {link.href === '/' ? '~' : `~${link.href}`}
          </a>
        ))}
      </div>
    </div>
  </nav>
</header>

<!-- Spacer for fixed header -->
<div class="h-16"></div>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');
  
  mobileMenuBtn?.addEventListener('click', () => {
    const isOpen = mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });
</script>

